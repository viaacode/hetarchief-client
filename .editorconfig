# EditorConfig is awesome: https://editorConfig.org

# Don't look for another .editorconfig file in parent directories
root = true

# Defaults to tab-indented (use smart-tabs)
[*]
charset = utf-8
end_of_line = LF
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

# 2 space indentation for all json and yml/yaml files
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# Don't trim trailing whitespace for Markdown files.
# (Remember, trailing spaces in markdown is used to differentiate line breaks and paragraphs)
[*.md]
trim_trailing_whitespace = false
